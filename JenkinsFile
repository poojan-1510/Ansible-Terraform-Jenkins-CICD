pipeline {
    agent any

    tools {
        // Install the Maven version configured as "maven-lts" in Jenkins tools.
        maven "maven-lts"
    }

    environment {
        SONARQUBE_ENV = 'MySonarQube'  // Name must match what you configured in Jenkins â†’ SonarQube servers
        NEXUS_CREDENTIALS = credentials('nexus-credentials')
        NEXUS_URL = 'http://<your-nexus-host>:8081/repository/maven-releases/'
    }

    stages {

        stage('Build') {
            steps {
                // Get code from GitHub repository
                git 'https://github.com/jenkins-docs/simple-java-maven-app.git'

                // Run Maven build on a Unix agent
                sh "mvn -B -DskipTests clean package"
            }
        }

        stage('Test') {
            steps {
                // Run Maven tests on a Unix agent
                sh "mvn test"
            }
            post {
                // Record test results and archive the JAR file
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                // Use the SonarQube environment configuration
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    // Run the SonarQube scanner via Maven
                    sh "mvn sonar:sonar -Dsonar.projectKey=simple-java-app -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.login=${SONAR_AUTH_TOKEN}"
                }
            }
        }

        stage('Quality Gate') {
            steps {
                // Wait for SonarQube analysis and fail the build if Quality Gate fails
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Deploy to Nexus') {
            steps {
                // Deploy artifact using Maven deploy goal
                sh """
                    mvn deploy \
                    -DskipTests \
                    -Dnexus.url=${NEXUS_URL} \
                    -Dnexus.user=${NEXUS_CREDENTIALS_USR} \
                    -Dnexus.password=${NEXUS_CREDENTIALS_PSW}
                """
            }
        }

    } 
     post {
        success {
            echo " Build, Test, SonarQube, and Deployment to Nexus completed successfully!"
        }
        failure {
            echo " Pipeline failed. Check logs for details."
        }
    }
} 
